 <div class="container">
  <div class="row">
    <div class="col-md-4">
 <h1>Burgers!</h1>

<img src="https://lh3.googleusercontent.com/8e9jtOnxVf7PisNxH3oaNSaQSLlRdBJZE8WgkGRzS1onG0Rvx6E2WK1xFSgMVqBIFDd6QLnh6aYX6Qemdi2ddA" alt="Burger">
</div>

<div class="col-md-4">
 
<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if Devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="col-md-4">
  <h2>All Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless Devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
</div>
</div>




